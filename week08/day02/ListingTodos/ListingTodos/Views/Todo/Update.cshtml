@model ListingTodos.Models.Todo
<head>
	<title>Update ToDo App</title>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" 
        crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
	<h2 style="color:aqua">Editing Todo</h2>
	<form method="post" action="/@Model.Id/edit" class="form-horizontal">
        <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="formGroupInputLarge" style="color:aqua">Task to update</label>
            <div class="col-sm-10">
            <input class="form-control" type="text" id="formGroupInputLarge" placeholder="@Model.Title" value="@Model.Title" name="Title"/>
            </div>
        </div> 
            
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                 <div class="checkbox">
                <label>
				@Html.CheckBoxFor(c => c.IsUrgent)	
						Urgent
				</label></div>
            </div>
        </div>

		<div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                 <div class="checkbox">
                <label>
                    <input name="IsDone" type="checkbox" value="@Model.IsUrgent"
						@*@((Model.IsDone) ? "checked" : string.Empty)*@> Done
                </label>
                </div>
            </div>
        </div>
            
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" value="Submit">Save</button>
            </div>
        </div>
        </form> 
